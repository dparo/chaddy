# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.{rst,md,yaml,yml,json}]
indent_size = 2


[Makefile]
indent_style = tab

[*.go]
indent_style = tab
